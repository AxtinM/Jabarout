<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700&display=swap"
      rel="stylesheet"
    />
    <script src="https://kit.fontawesome.com/9f37ddf547.js"></script>
    <title>Social Networking App</title>
  </head>

  <body>
    <section class="live">
      <h3>JABAROUT</h3>
      <div class="person">
        <div class="profile-pic"></div>
        <p class="name">Miranda</p>
      </div>
      <div class="person live-active">
        <div class="profile-pic"></div>
        <p class="name">Taylor</p>
        <span><i class="fas fa-video"></i> Live</span>
      </div>
      <div class="person">
        <div class="profile-pic"></div>
        <p class="name">Jack</p>
      </div>
      <div class="person">
        <div class="profile-pic"></div>
        <p class="name">Jimmy</p>
      </div>
      <div class="person">
        <div class="profile-pic"></div>
        <p class="name">Alex</p>
      </div>
      <div class="person">
        <div class="profile-pic"></div>
        <p class="name">Halsey</p>
      </div>
      <div class="person">
        <div class="profile-pic"></div>
        <p class="name">Jamie</p>
      </div>
      <div class="person">
        <div class="profile-pic"></div>
        <p class="name">mariem</p>
      </div>
      <div class="person">
        <div class="profile-pic"></div>
        <p class="name">Ahmed</p>
      </div>
      <div class="person">
        <div class="profile-pic"></div>
        <p class="name">Nour</p>
      </div>
      <div class="person">
        <div class="profile-pic"></div>
        <p class="name">Tarek</p>
      </div>
      <div class="person">
        <div class="profile-pic"></div>
        <p class="name">Sarah</p>
      </div>
    </section>

    <center>
      <section class="newsfeed">
        <% posts.forEach(post => { %>
        <div class="card">
          <div class="picture"></div>
          <div class="content">
            <div class="header">
              <div class="profile-pic"></div>
              <div class="detail">
                <p class="name">Miranda</p>
                <p class="posted">2 hours ago</p>
              </div>
            </div>
            <div class="desc"><%= post.description %></div>
            <div class="tags">
              <span>#party</span>
              <span>#colorful</span>
            </div>
            <div class="footer">
              <div class="atag" class="like">
                <i class="fas fa-heart"></i>
                <span>12k</span>
              </div>
              <a class="atag" href="/posts/edit/<%=post._id%>">
                <div class="comment">
                  <i class="fas fa-comment"></i>
                  <span>12k</span>
                </div>
              </a>
              <a class="atag" href="/posts/delete/<%=post._id%>">
                <div class="share">
                  <i class="fas fa-trash"></i>
                </div>
              </a>
            </div>
          </div>
        </div>
        <% }) %>
      </section>
    </center>

    <section class="nav">
      <div class="icon active">
        <i class="fas fa-fire"></i>
        <p>Home</p>
      </div>
      <div class="icon">
        <i class="fas fa-globe"></i>
        <p>Live</p>
      </div>
      <a href="/posts/add">
        <div class="icon">
          <i class="fas fa-comment-dots"></i>
          <p>Add Post</p>
        </div>
      </a>
      <div class="icon">
        <i class="fas fa-bell"></i>
        <p>Notifications</p>
      </div>
      <div class="icon">
        <a href="/profile">
          <i class="fas fa-user"></i>
          <p>Profile</p>
        </a>
      </div>
    </section>

    <div class="space"></div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.2.0/anime.js"></script>
    <script src="/javascripts/main.js"></script>
  </body>
</html>
